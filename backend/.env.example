# 后端开发环境配置文件
# 复制为 .env 并根据实际情况修改

# 服务配置
NODE_ENV=development
PORT=3000
BACKEND_HOST=localhost

# 数据库配置
MYSQL_ROOT_PASSWORD=daodao_root
MYSQL_DATABASE=daodao
MYSQL_USER=daodao_dev
MYSQL_PASSWORD=daodao_dev_2024
MYSQL_PORT=3306
DATABASE_URL=mysql://daodao_dev:daodao_dev_2024@localhost:3306/daodao

# Redis配置
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT配置 (生产环境必须修改)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-environment
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 文件上传配置
UPLOAD_MAX_SIZE=5242880  # 5MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# 邮件服务配置 (开发环境使用MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@daodao.com

# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 支付配置
WECHAT_PAY_MCH_ID=your_merchant_id
WECHAT_PAY_API_KEY=your_api_key
WECHAT_PAY_CERT_PATH=./certs/wechat/apiclient_cert.pem
WECHAT_PAY_KEY_PATH=./certs/wechat/apiclient_key.pem

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_secret_key
ALIYUN_OSS_BUCKET=daodao-files
ALIYUN_OSS_REGION=oss-cn-shanghai

# 短信服务配置
SMS_ACCESS_KEY_ID=your_sms_access_key
SMS_ACCESS_KEY_SECRET=your_sms_secret_key
SMS_SIGN_NAME=叨叨房车
SMS_TEMPLATE_CODE=SMS_123456789

# 管理工具配置
ADMINER_PORT=8080
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# 开发工具配置
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_PROFILES=true

# 安全配置
RATE_LIMIT_WINDOW_MS=900000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# 缓存配置
CACHE_TTL=3600  # 1小时
CACHE_MAX_SIZE=1000

# 任务队列配置
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3